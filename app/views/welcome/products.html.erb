<h1>Here is a list of all Products:</h1>

<table border="2">
	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Quantity</th>
	</tr>

	<% @products.each do |product| %>
		<tr>
			<td><%= link_to product.name, show_product_path(id: product.id) %></td>
			<td><%= number_to_currency product.price %></td>
			<td><%= product.quantity %></td>
			<td><%= link_to 'Edit Product', edit_product_path(id: product.id) %></td>
		</tr>
	<% end %>
</table>

<p><%= link_to "Back to Home Page", root_path %></p>